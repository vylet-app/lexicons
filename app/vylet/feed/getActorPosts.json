{
  "lexicon": 1,
  "id": "app.vylet.feed.getActorPosts",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get posts of a given actor. Does not require auth.",
      "parameters": {
        "type": "params",
        "required": ["actor"],
        "properties": {
          "actor": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 25
          },
          "cursor": {
            "type": "string"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["posts"],
          "properties": {
            "posts": {
              "type": "array",
              "items": { "type": "ref", "ref": "app.vylet.feed.defs#postView" }
            },
            "cursor": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
