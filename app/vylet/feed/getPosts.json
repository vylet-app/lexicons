{
  "lexicon": 1,
  "id": "app.vylet.feed.getPosts",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get posts by list of URIs. Does not require auth, but contains relevant metadata if auth provided.",
      "parameters": {
        "type": "params",
        "required": ["uris"],
        "properties": {
          "uris": {
            "type": "array",
            "items": { "type": "string", "format": "at-uri" },
            "maxLength": 25
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["posts"],
          "properties": {
            "posts": {
              "type": "array",
              "items": { "type": "ref", "ref": "app.vylet.feed.defs#postView" }
            }
          }
        }
      }
    }
  }
}
