{
  "lexicon": 1,
  "id": "app.vylet.actor.profile",
  "defs": {
    "main": {
      "type": "record",
      "description": "A declaration of a Vylet account profile.",
      "key": "literal:self",
      "record": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string",
            "maxGraphemes": 64,
            "maxLength": 640
          },
          "description": {
            "type": "string",
            "description": "Free-form profile description text.",
            "maxGraphemes": 600,
            "maxLength": 6000
          },
          "pronouns": {
            "type": "string",
            "description": "Free-form pronouns text.",
            "maxGraphemes": 20,
            "maxLength": 200
          },
          "avatar": {
            "type": "blob",
            "description": "Small image to be displayed next to posts from account.",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000
          },
          "createdAt": { "type": "string", "format": "datetime" }
        }
      }
    }
  }
}
